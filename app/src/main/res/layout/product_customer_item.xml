<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/roundedborder"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_product"
        android:src="@drawable/samsung"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/tv_productName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Product name"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_productPromotionPrice"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:textSize="10sp"
            android:textColor="@color/redcart"
           />
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:text="200.000D"
            android:textSize="10sp"
            android:textColor="@color/redcart"
            />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_productQuantity"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Con 4 sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/btn_product_add2Cart"
            android:text="Add to cart"
            android:textSize="7sp"
            android:textColor="@color/white"
            android:paddingVertical="5dp"
            android:layout_width="55dp"
            android:background="@color/main_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>