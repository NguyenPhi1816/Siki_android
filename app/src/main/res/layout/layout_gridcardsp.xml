<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/primary">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/gridimagesp"
            android:src="@drawable/dientu"
            android:background="@drawable/borderimageview"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="10sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/gridtextnamesp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="20sp"
            android:text="Card 4080 12GB"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridtextslsp"
            android:text="SL: 200"
            android:layout_margin="10dp"
            android:textStyle="italic"
            android:textSize="10sp"
            android:ellipsize="end"
            android:maxLines="1"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridtextgiasp"
        android:textAlignment="center"
        android:text="45.000.000vnÄ‘"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/primary"/>

</LinearLayout>